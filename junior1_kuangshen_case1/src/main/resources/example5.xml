<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--p标签等同于之前的setter注入的property-->
<bean id="staff" class="com.ryzezhao.example5.Staff" p:name="员工" p:age="18"> </bean>
<!--c标签等同于之前的构造函数注入的constructor-arg-->
<bean id="staff1" class="com.ryzezhao.example5.Staff" c:name="员工1" c:age="28"></bean>
</beans>